<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pedagog.RegistrationView">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="Studentet" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label text="Kursi" GridPane.columnIndex="2" />

    <ListView fx:id="studentsListView" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <ListView fx:id="registeredListView" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Label fx:id="errorLabel" textFill="red" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <StackPane GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <StackPane GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <StackPane GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <Button defaultButton="true" mnemonicParsing="false" onAction="#saveButton" text="Ruaj Ndryshimet" StackPane.alignment="CENTER" />
        <Button fx:id="backButton" defaultButton="true" mnemonicParsing="false" text="Kthehu Pas" StackPane.alignment="CENTER_RIGHT" />
    </StackPane>
    <GridPane alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
     <Button fx:id="register" defaultButton="true" mnemonicParsing="false" text="-&gt;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
     <Button fx:id="unregister" defaultButton="true" mnemonicParsing="false" text="&lt;-" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
      <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
